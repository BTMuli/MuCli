{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",
    "lib": ["es2015"],
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "*.json",
    ".*.yml",
    ".vscode/*.json",
    "config/default.yml",
    "dist/**/*",
    "scripts/*",
    "src/**/*"
  ],
  "exclude": ["dist", "node_modules"]
}
