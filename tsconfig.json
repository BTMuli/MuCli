{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",
    "lib": ["es2015"],
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "*.json",
    ".*.yml",
    ".vscode/*.json",
    "dist/**/*",
    "scripts/*",
    "src/**/*"
  ],
  "exclude": ["dist", "node_modules"],
  "ts-node": {
    "esm": true
  }
}
